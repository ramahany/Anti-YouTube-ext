{
  "manifest_version": 3,
  "name": "Anti YouTube Extension",
  "version": "1.0",
  "description": "Helps with YouTube addiction by hiding unwanted content",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle YouTube Content Hiding"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}